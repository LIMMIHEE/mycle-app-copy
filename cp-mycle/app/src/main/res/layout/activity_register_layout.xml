<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#404040"
    tools:context=".registerLayout">

        <Button
            android:id="@+id/backbutton"
            style="?android:borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_arrow_back_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="36dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="100dp"
            android:text="마이클 계정 만들기"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="4dp"
            android:lineSpacingExtra="-4dp"
            android:text="마이클 계정으로 소중한 데이터를\n안전하게 관리할 수 있습니다."
            android:textColor="#B6B6B6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

        <EditText
            android:id="@+id/emailText"
            android:layout_width="333dp"
            android:layout_height="42dp"
            android:layout_marginTop="29dp"
            android:drawableStart="@drawable/ic_baseline_mail_outline_24"
            android:drawablePadding="15dp"
            android:ems="10"
            android:hint="이메일을 입력하세요"
            android:inputType="textEmailAddress"
            android:textColor="#FF787878"
            android:textColorHint="#FF787878"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView15" />

        <EditText
            android:id="@+id/PasswordText"
            android:layout_width="333dp"
            android:layout_height="42dp"
            android:layout_marginTop="6dp"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:drawablePadding="15dp"
            android:ems="10"
            android:hint="비밀번호를 입력하세요 ( 최소 6자 )"
            android:inputType="textPassword"
            android:textColor="#FF787878"
            android:textColorHint="#787878"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emailText" />

        <Button
            android:id="@+id/again_Button"
            android:layout_width="105dp"
            android:layout_height="40dp"
            android:layout_marginEnd="29dp"
            android:layout_marginRight="29dp"
            android:layout_marginBottom="38dp"
            android:background="#00BCD4"
            android:drawableRight="@drawable/ic_baseline_navigate_next_24"
            android:drawablePadding="-20dp"
            android:text="계속"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/getDBtest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginBottom="163dp"
            android:text="Button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <RadioGroup
            android:id="@+id/ageRange"
            android:layout_width="404dp"
            android:layout_height="44dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView17">

                <RadioButton
                    android:id="@+id/radio20"
                    android:layout_width="83dp"
                    android:layout_height="43dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/fragment_info_round_edge"
                    android:button="@drawable/radio_btn_cus"
                    android:gravity="center"
                    android:text="20대"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/radio30"
                    android:layout_width="83dp"
                    android:layout_height="43dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/fragment_info_round_edge"
                    android:button="@drawable/radio_btn_cus"
                    android:gravity="center"
                    android:text="30대"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/radio40"
                    android:layout_width="83dp"
                    android:layout_height="43dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/fragment_info_round_edge"
                    android:button="@drawable/radio_btn_cus"
                    android:gravity="center"
                    android:text="40대"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/radio50"
                    android:layout_width="83dp"
                    android:layout_height="43dp"
                    android:background="@drawable/fragment_info_round_edge"
                    android:button="@drawable/radio_btn_cus"
                    android:gravity="center"
                    android:text="50대+"
                    android:textColor="#FFFFFF" />


        </RadioGroup>

        <TextView
            android:id="@+id/textG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="152dp"
            android:text="성별"
            android:textColor="#B6B6B6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.093"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/GenderRadioG"
            android:layout_width="348dp"
            android:layout_height="46dp"
            android:layout_marginStart="33dp"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="33dp"
            android:layout_marginRight="33dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textG">

                <RadioButton
                    android:id="@+id/WomanRadio"
                    android:layout_width="163dp"
                    android:layout_height="39dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/fragment_info_round_edge"
                    android:button="@drawable/radio_btn_cus"
                    android:gravity="center"
                    android:text="여성 운전자"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/manRadio"
                    android:layout_width="163dp"
                    android:layout_height="39dp"
                    android:background="@drawable/fragment_info_round_edge"
                    android:button="@drawable/radio_btn_cus"
                    android:gravity="center"
                    android:text="남성 운전자"
                    android:textColor="#FFFFFF" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="연령"
            android:textColor="#B6B6B6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.093"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/GenderRadioG" />

</androidx.constraintlayout.widget.ConstraintLayout>