<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#404040"
    tools:context=".Member_information">

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:background="#00FFFFFF"
        android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
        android:drawablePadding="30dp"
        android:text="회원 정보"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_vpn_key_24" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="23dp"
            android:text="계정정보"
            android:textColor="#A3A3A3"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/imageView5"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/emaliButton"
            android:layout_width="325dp"
            android:layout_height="47dp"
            android:layout_marginStart="53dp"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="11dp"
            android:drawableLeft="@drawable/ic_baseline_mail_outline_24"
            android:drawablePadding="20dp"
            android:gravity="center|left"
            android:text="이메일자리"
            android:textColor="#707070"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView16" />

        <TextView
            android:id="@+id/PwChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="13dp"
            android:text="비밀번호 변경"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emaliButton" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="115dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"
            app:srcCompat="@drawable/ic_baseline_supervisor_account_24" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="36dp"
            android:text="성별"
            android:textColor="#A3A3A3"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/imageView6"
            app:layout_constraintTop_toBottomOf="@+id/PwChange" />

        <RadioGroup
            android:id="@+id/GenderRadioG"
            android:layout_width="321dp"
            android:layout_height="48dp"
            android:layout_marginStart="33dp"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="33dp"
            android:layout_marginRight="33dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.916"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView19">

            <RadioButton
                android:id="@+id/WomanRadio"
                android:layout_width="147dp"
                android:layout_height="39dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/fragment_info_round_edge"
                android:button="@drawable/radio_btn_cus"
                android:gravity="center"
                android:text="여성 운전자"
                android:textColor="#FFFFFF" />

            <RadioButton
                android:id="@+id/manRadio"
                android:layout_width="147dp"
                android:layout_height="39dp"
                android:background="@drawable/fragment_info_round_edge"
                android:button="@drawable/radio_btn_cus"
                android:gravity="center"
                android:text="남성 운전자"
                android:textColor="#FFFFFF" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/ageRange"
            android:layout_width="319dp"
            android:layout_height="44dp"
            android:layout_marginTop="13dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.576"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView20">

            <RadioButton
                android:id="@+id/radio20"
                android:layout_width="75dp"
                android:layout_height="43dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/fragment_info_round_edge"
                android:button="@drawable/radio_btn_cus"
                android:gravity="center"
                android:text="20"
                android:textColor="#FFFFFF" />

            <RadioButton
                android:id="@+id/radio30"
                android:layout_width="75dp"
                android:layout_height="43dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/fragment_info_round_edge"
                android:button="@drawable/radio_btn_cus"
                android:gravity="center"
                android:text="30"
                android:textColor="#FFFFFF" />

            <RadioButton
                android:id="@+id/radio40"
                android:layout_width="75dp"
                android:layout_height="43dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/fragment_info_round_edge"
                android:button="@drawable/radio_btn_cus"
                android:gravity="center"
                android:text="40"
                android:textColor="#FFFFFF" />

            <RadioButton
                android:id="@+id/radio50"
                android:layout_width="75dp"
                android:layout_height="43dp"
                android:background="@drawable/fragment_info_round_edge"
                android:button="@drawable/radio_btn_cus"
                android:gravity="center"
                android:text="50+"
                android:textColor="#FFFFFF" />


        </RadioGroup>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="79dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView6"
            app:srcCompat="@drawable/ic_baseline_cake_24" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:text="연령"
            android:textColor="#A3A3A3"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/imageView7"
            app:layout_constraintTop_toBottomOf="@+id/GenderRadioG" />

        <Button
            android:id="@+id/LogoutBtn"
            android:layout_width="101dp"
            android:layout_height="41dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="39dp"
            android:layout_marginRight="39dp"
            android:background="#2E2E2E"
            android:text="로그아웃"
            android:textColor="#A3A3A3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ageRange" />

        <Button
            android:id="@+id/button13"
            android:layout_width="101dp"
            android:layout_height="41dp"
            android:layout_marginStart="52dp"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="26dp"
            android:background="#2E2E2E"
            android:text="회원탈퇴"
            android:textColor="#4A4A4A"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ageRange" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>